@model IEnumerable<AlchemyApi.Models.Alchemy.ReagentLibItem>
@{
    ViewBag.Title = "Dem reagents";
}

<h3>Known reagents</h3>
<div class="reagentList">
    <br />
    @Html.ActionLink("Создать новый", "Create")
    <br /><br />
    @foreach (AlchemyApi.Models.Alchemy.ReagentLibItem item in Model)
    {
        <div>
            <div style="float:left; width:auto;">@item.Id |</div>
            <div style="float:left; background-color: @item.GetColor(); width: 18px; height: 18px;"></div>
            <div style="float:left; width:auto;">
                | @item.Title
            </div>
            <div style="float: right; width: auto;">
                @Html.ActionLink("Edit", "Edit", new { Id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { Id = item.Id })
            </div>
            <div style="width:100%; height:24px; background-color:#E6E6FF; margin-bottom:4px;"></div>
        </div>
    }
</div>
